{
  "name": "yt-dlp-gui",
  "version": "1.0.0",
  "description": "Interface gr√°fica moderna para yt-dlp",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.yourname.yt-dlp-gui",
    "productName": "YT-DLP GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "keywords": [
    "yt-dlp",
    "youtube",
    "downloader",
    "electron",
    "gui"
  ],
  "author": "zerobertoo",
  "license": "MIT"
}
